{
  "general":
  {
    "default_mode": "idle"
  },
  "network":
  {
    "ssid": <string>,
    "password": <string>,
    "timeout": 15,
    "ntp_server": <optional, string>,
    "timezone": <optional, integer>,
    "ntp_timeout": 10
  },
  "mqtt":
  {
    "host": <string>,
    "tls":
    {
      "ca": <optional, string>,
      "insecure": <true or false>
    },
    "user": <optional, string>,
    "password": <optional, string>,
    "root": "homebattery"
  },
  "logging":
  {
    "host": <optional, string>,
    "ignore":
    [
      "bluetooth",
      "consumption",
      "modbus0",
      "modbus1",
      "mqtt"
    ]
  },
  "inverter":
  {
    "power": <integer>,
    "reduce_power_during_fault": false,
    "netzero":
    {
      "signed": <true or false>,
      "evaluated_time_span": 30,
      "maturity_time_span": 15,
      "target": <integer>,
      "hysteresis": <integer>,
      "change_upwards": <integer>,
      "change_downwards": <integer>
    }
  },
  "supervisor":
  {
    "battery_offline":
    {
      "threshold": 120
    },
    "cell_low":
    {
      "threshold": 3.1,
      "hysteresis": 0.1
    },
    "cell_high":
    {
      "threshold": 3.65,
      "hysteresis": 0.2
    },
    "temp_low_charge":
    {
      "threshold": 10,
      "hysteresis": 2
    },
    "temp_low_discharge":
    {
      "threshold": 0,
      "hysteresis": 2
    },
    "temp_high_charge":
    {
      "threshold": 40,
      "hysteresis": 2
    },
    "temp_high_discharge":
    {
      "threshold": 40,
      "hysteresis": 2
    },
    "live_data_lost_charge":
    {
      "threshold": 300
    },
    "live_data_lost_discharge":
    {
      "threshold": 60
    },
    "mqtt_offline":
    {
      "threshold": 60
    }
  },
  "devices":
  {
    "battery_llt_power":
    {
      "driver": "lltPowerBmsV4Ble",
      "mac": <string>
    },
    "battery_daly":
    {
      "driver": "daly8S24V60A",
      "mac": <string>
    },
    "battery_jk":
    {
      "driver": "jkBmsBd",
      "mac": <string>
    },
    "battery_pylontech":
    {
      "driver": "pylonLv",
      "port": <ext1 or ext2>,
      "serial": <string>
    },
    "battery_mqtt":
    {
      "driver": "mqttBattery",
      "root_topic": "<root>/bat/dev/<device>"
    },
    "solar_generic":
    {
      "driver": "genericSolar",
      "port": <ext1 or ext2>,
      "address": 1,
      "current_range": <50, 100, 200 or 300>
    },
    "solar_victron":
    {
      "driver": "victronMppt",
      "port": <ext1 or ext2>
    },
    "charger_shelly":
    {
      "driver": "shellyCharger",
      "host": <string>,
      "generation": <1 or 2>,
      "relay_id": 0
    },
    "inverter_ahoy_dtu":
    {
      "driver": "ahoyDtu",
      "host": <string>,
      "id": 0,
      "power_lut": <string>
    },
    "inverter_open_dtu":
    {
      "driver": "openDtu",
      "host": <string>,
      "password": <string>,
      "serial": <string>,
      "power_lut": <string>
    },
    "inverter_growatt":
    {
      "driver": "growattinvertermodbus",
      "port": <ext1 or ext2>,
      "family": <xx00-S or TL-X>,
      "address": <integer>,
      "power_hysteresis": 3
    },
    "power_http":
    {
      "driver": "httpConsumption",
      "host": <string>,
      "query": <string>,
      "path": <list of strings>,
      "interval": 2,
      "factor": <float>
    },
    "power_mqtt":
    {
      "driver": "mqttConsumption",
      "topic": "<string>"
    }
  }
}
