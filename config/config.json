{
  "general":
  {
    "default_mode": "idle",
    "inverter_power": <integer>
  },
  "network":
  {
    "ssid": "<string>",
    "password": "<string>",
    "timeout": 15,
    "ntp_server": "<optional, string>",
    "timezone": <optional, integer>,
    "ntp_timeout": 10
  },
  "mqtt":
  {
    "host": "<string>",
    "ca": "<optional, string>",
    "tls_insecure": <optional, true or false>,
    "user": "<optional, string>",
    "password": "<optional, string>",
    "root": "homebattery"
  },
  "logging":
  {
    "host": "<optional, string>",
    "ignore":
    [
      "bluetooth",
      "consumption",
      "mqtt"
    ]
  },
  "netzero":
  {
    "enabled": <true or false>,
    "signed": <true or false>,
    "evaluated_time_span": 30,
    "maturity_time_span": 15,
    "power_offset": 10,
    "power_hysteresis": 5,
    "power_change_upwards": 100,
    "power_change_downwards": 50
  },
  "supervisor":
  {
    "battery_offline":
    {
      "enabled": true,
      "threshold": 120
    },
    "cell_low":
    {
      "enabled": true,
      "threshold": 3.1,
      "hysteresis": 0.1
    },
    "cell_high":
    {
      "enabled": true,
      "threshold": 3.65,
      "hysteresis": 0.2
    },
    "temp_low_charge":
    {
      "enabled": true,
      "threshold": 10,
      "hysteresis": 2
    },
    "temp_low_discharge":
    {
      "enabled": true,
      "threshold": 0,
      "hysteresis": 2
    },
    "temp_high_charge":
    {
      "enabled": true,
      "threshold": 40,
      "hysteresis": 2
    },
    "temp_high_discharge":
    {
      "enabled": true,
      "threshold": 40,
      "hysteresis": 2
    },
    "live_data_lost_charge":
    {
      "enabled": <true or false>,
      "threshold": 300
    },
    "live_data_lost_discharge":
    {
      "enabled": <true or false>,
      "threshold": 60
    },
    "mqtt_offline":
    {
      "enabled": true,
      "threshold": 60
    }
  },
  "devices":
  {
    "battery_llt_power":
    {
      "driver": "lltPowerBmsV4Ble",
      "mac": "<string>"
    },
    "battery_daly":
    {
      "driver": "daly8S24V60A",
      "mac": "<string>"
    },
    "battery_jk":
    {
      "driver": "jkBmsBd4",
      "mac": "<string>"
    },
    "battery_mqtt":
    {
      "driver": "mqttBattery",
      "root_topic": "<root>/bat/dev/<device>",
      "cell_count": <integer>,
      "temperature_count": <integer>
    },
    "solar_victron":
    {
      "driver": "victronMppt",
      "port": "<ext1 or ext2>",
      "power_hysteresis": 2
    },
    "charger_shelly":
    {
      "driver": "shellyCharger",
      "host": "<string>",
      "relay_id": 0
    },
    "inverter_ahoy_dtu":
    {
      "driver": "ahoyDtu",
      "host": <string>,
      "id": 0,
      "power_lut": "<string>"
    },
    "inverter_growatt":
    {
      "driver": "growattinvertermodbus",
      "port": "<ext1 or ext2>",
      "address": <integer>,
      "power_hysteresis": 2
    },
    "power_mqtt":
    {
      "driver": "mqttConsumption",
      "topic": "<string>"
    }
  }
}
